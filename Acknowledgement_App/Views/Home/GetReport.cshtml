@{
    Layout = "_Layout";
}
@using Acknowledgement_App.Models;
@model IList<Acknowledgement_App.Models.Ack>
<style>
    .dataTables_filter {
        margin-top: 1%;
        margin-bottom: 1%
    }
</style>
<div>
    @if (Model != null && Model.Count > 0)
    {
        <table id="resultTable" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>APPLICATION FOR</th>
                    <th>HALLTICKET No.</th>
                    <th>APPLIED ON</th>
                    <th>DATE OF ISSUE</th>
                    <th>No. OF CERTIFICATES</th>
                    <th>CHALLAN No.</th>
                    <th>AMOUNT</th>
                    <th>REMARK</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td>@row.ApplicationFor</td>
                        <td>@row.HallticketNo</td>
                        <td>@row.AppliedOn</td>
                        <td>@row.DateOfIssue</td>
                        <td>@row.NoOfCertificates</td>
                        <td>@row.ChallanNo</td>
                        <td>@row.Amount</td>
                        <td>@row.Remark</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-secondary" role="alert">
            Data not found
        </div>

    }
</div>

